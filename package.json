{
	"name": "demo",
	"version": "0.1.0",
	"description": "我的工具箱",
	"author": "xiaowang",
	"main": "main.js",
	"scripts": {
		"start": "electron .",
		"package-test": "electron-packager . ele --platform=win32 --arch=x64 --icon=./public/icos/toolbar-utilities.ico --out=r:/out --asar --app-version=0.0.1 --overwrite --ignore=node_modules --electron-version 6.0.11",
		"build": "electron-builder build"
	},
	"dependencies": {
		"electron": "^11.5.0",
		"python-shell": "^1.0.8",
		"request": "^2.3.4",
		"request-promise": "^4.2.4",
		"cheerio": "^1.0.0-rc.3",
		"jquery": "^3.0.0",
		"darkmode-js": "^1.4.0",
		"devtron": "1.4.0"
	},
	"devDependencies": {
		"electron": "^11.5.0",
		"python-shell": "^1.0.8",
		"request": "^2.3.4",
		"request-promise": "^4.2.4",
		"cheerio": "^1.0.0-rc.3",
		"jquery": "^3.0.0",
		"darkmode-js": "^1.4.0",
		"devtron": "1.4.0"
	},
	
	"build": {
		"appId": "com.onlookee.app",
		"productName": "我的工具箱",
		"copyright": "xiaowang",
		"asar": false,
		"directories": {
			"output": "r:/dist"
		},
		"win": {
			"icon": "./public/icos/toolbar-utilities.ico"
		},
		"nsis": {
			"oneClick": false,
			"allowElevation": true,
			"allowToChangeInstallationDirectory": true,
			"installerIcon": "./public/icos/toolbar-utilities.ico",
			"uninstallerIcon": "./public/icos/uninstall.ico",
			"installerHeaderIcon": "./public/icos/toolbar-utilities.ico",
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true,
			"shortcutName": "启动我的工具箱"
		}
	}
}
